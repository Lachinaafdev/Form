
@model IEnumerable<FormRegistro.Models.Usuario>

@{ ViewData["Title"] = "Usuarios";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="text-center">

        <h3>Usuarios</h3>
      

      </div>
      
      <div class="container">
          <div class="row justify-content-center">

               <div class="col-12 table-responsive" >
                   

            @if (Model.Count()>0)

            {   
                <table class="table table-striped table-borderless table-sm tabla">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                             <th>@Html.DisplayNameFor(m => m.Name)</th>
                             <th>@Html.DisplayNameFor(m => m.Apellido)</th>
                             <th>@Html.DisplayNameFor(m => m.Direccion)</th>
                             <th>@Html.DisplayNameFor(m => m.Fecha)</th>
                             <th>@Html.DisplayNameFor(m => m.EstadoN)</th>
                             
                           
                        </tr>
                        
                        </thead>
                            <tbody>
                              @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Apellido</td>
                                    <td>@item.Direccion</td>
                                    <td>@item.Fecha</td>
                                    <td>@item.EstadoN</td>
                                   

                                </tr>
                            }
                        </tbody>
                   

                </table>
            }
            else
            {
    
                <p>No existe registro</p>
            }

        </div>
    




          </div>

      </div>
